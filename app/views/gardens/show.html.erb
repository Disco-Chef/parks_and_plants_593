<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= @garden.banner_url%>;);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="plants-card-grid my-3 container">
  <% @garden.plants.each do |plant| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url%>)">
      <%= plant.name %>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %>
